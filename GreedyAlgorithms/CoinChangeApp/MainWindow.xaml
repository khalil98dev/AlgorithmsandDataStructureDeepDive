<Window
    x:Class="CoinChangeApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DZD Coin Change Calculator"
    Width="1100"
    Background="#F0F4F8"
    WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Margin="0,0,0,20"
            Padding="30,20"
            Background="White"
            CornerRadius="15">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    Opacity="0.1"
                    ShadowDepth="3" />
            </Border.Effect>
            <StackPanel>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Viewbox
                        Width="40"
                        Height="40"
                        Margin="0,0,10,0">
                        <Canvas Width="24" Height="24">
                            <Path Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.31-8.86c-1.77-.45-2.34-.94-2.34-1.67 0-.84.79-1.43 2.1-1.43 1.38 0 1.9.66 1.94 1.64h1.71c-.05-1.34-.87-2.57-2.49-2.97V5H10.9v1.69c-1.51.32-2.72 1.3-2.72 2.81 0 1.79 1.49 2.69 3.66 3.21 1.95.46 2.34 1.15 2.34 1.87 0 .53-.39 1.39-2.1 1.39-1.6 0-2.23-.72-2.32-1.64H8.04c.1 1.7 1.36 2.66 2.86 2.97V19h2.34v-1.67c1.52-.29 2.72-1.16 2.73-2.77-.01-2.2-1.9-2.96-3.66-3.42z" Fill="#6366F1" />
                        </Canvas>
                    </Viewbox>
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="#6366F1"
                        Text="DZD Coin Change Calculator" />
                </StackPanel>
                <TextBlock
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    Foreground="#64748B"
                    Text="Calculate optimal change using Algerian Dinar coins" />
            </StackPanel>
        </Border>

        <!--  Input And Result  Sections  -->
        <Border
            Grid.Column="1"
            Margin="0,0,0,20"
            Padding="30"
            Background="White"
            CornerRadius="15">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    Opacity="0.1"
                    ShadowDepth="3" />
            </Border.Effect>
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="20" />
                    </Grid.RowDefinitions>

                    <!--  Result Section  -->
                    <Border
                        Grid.RowSpan="3"
                        Grid.Column="2"
                        Padding="30"
                        Background="White"
                        CornerRadius="15">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Opacity="0.1"
                                ShadowDepth="3" />
                        </Border.Effect>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>

                                <!--  Coins Display  -->
                                <TextBlock
                                    Margin="0,0,0,20"
                                    HorizontalAlignment="Center"
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    Foreground="#334155"
                                    Text="Coin Breakdown" />
                                <WrapPanel
                                    x:Name="CoinsPanel"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal" />
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!--  Total Purchase  -->
                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock
                            Margin="0,0,0,8"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#334155"
                            Text="Total Purchase Amount (DZD)" />
                        <Border
                            BorderBrush="#E2E8F0"
                            BorderThickness="2"
                            CornerRadius="10">
                            <TextBox
                                x:Name="TotalPurchaseTextBox"
                                Style="{StaticResource ModernTextBox}"
                                Text="0" />
                        </Border>
                    </StackPanel>

                    <!--  Paid Amount  -->
                    <StackPanel Grid.Row="1" Grid.Column="0">
                        <TextBlock
                            Margin="0,0,0,8"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#334155"
                            Text="Paid Amount (DZD)" />
                        <Border
                            BorderBrush="#E2E8F0"
                            BorderThickness="2"
                            CornerRadius="10">
                            <TextBox
                                x:Name="PaidAmountTextBox"
                                Style="{StaticResource ModernTextBox}"
                                Text="0" />
                        </Border>
                    </StackPanel>
                </Grid>


            </StackPanel>
        </Border>

        <StackPanel
            Grid.Row="1"
            Margin="0,30,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="220"
                Click="CalculateButton_Click"
                Content="💰 Calculate Change"
                Style="{StaticResource PrimaryButton}" />
            <Button
                Width="150"
                Margin="15,0,0,0"
                Click="ResetButton_Click"
                Content="🔄 Reset"
                Style="{StaticResource SecondaryButton}" />
        </StackPanel>
    </Grid>
</Window>